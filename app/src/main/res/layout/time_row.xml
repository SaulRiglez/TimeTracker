<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/time_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="@dimen/padding_size_10_dp"
    android:paddingTop="20dp">

    <TextView
    android:id="@+id/lap_name"
    android:layout_width="@dimen/layout_size_0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
        android:text="@string/lap_time" />
    <TextView
        android:id="@+id/lap_time"
        android:layout_width="@dimen/layout_size_0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:text="@string/lap_format_time" />
</LinearLayout>